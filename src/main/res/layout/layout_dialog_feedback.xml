<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/feedback_edit"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@android:drawable/edit_text"
        android:gravity="top"
        android:hint="这里是意见反馈内容"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:textColor="@color/font_dark_gray"
        android:paddingTop="10dp"
        android:textColorHint="@color/text_color"
        android:textSize="?attr/text_size_16" />


    <Button
        android:id="@+id/feedback_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/selector_code_bg"
        android:text="发送"
        android:textSize="?attr/text_size_20"
        android:textColor="@color/selector_bg_text_color" />
</LinearLayout>