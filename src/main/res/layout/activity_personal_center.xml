<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg"
    android:orientation="vertical">

    <com.stuonline.views.TitleView
        android:id="@+id/personal_center_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centent_text="中国大学生在线"
        app:right_text="注销"
        app:right_text_Size="?attr/text_size_18"
        app:right_text_visibility="visible"
        app:right_visibility="gone" />

    <com.stuonline.views.CircleRefreshLayout
        android:id="@+id/personal_center_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:AniBackColor="#ff0097cd">

        <ListView
            android:id="@+id/personal_center_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:listSelector="@android:color/transparent" />
    </com.stuonline.views.CircleRefreshLayout>
</LinearLayout>