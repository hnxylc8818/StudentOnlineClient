<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bg"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/comment_item_photo"
        android:src="@drawable/default_photo"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comment_item_nick"
            android:textColor="@color/pink"
            android:layout_weight="1"
            android:textSize="?attr/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/comment_item_content"
            android:layout_weight="1"
            android:textSize="?attr/text_size_16"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="阿萨德卢卡斯的看撒娇"
            android:textColor="?attr/text_color_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/comment_item_date"
        android:layout_marginRight="10dp"
        android:textSize="?attr/text_size_16"
        android:textColor="?attr/text_color_model"
        android:layout_gravity="right|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>