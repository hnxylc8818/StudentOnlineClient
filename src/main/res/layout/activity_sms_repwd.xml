<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg"
    android:orientation="vertical">

    <com.stuonline.views.TitleView
        android:id="@+id/sms_repwd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centent_text="中国大学生在线"
        app:left_src="@mipmap/back"
        app:left_visibility="visible"
        app:right_text="确定"
        app:right_text_Size="?attr/text_size_18"
        app:right_text_visibility="visible"
        app:right_visibility="gone" />

    <com.stuonline.views.CustomerEditText
        android:id="@+id/sms_repwd_newpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/register_margerleft"
        android:layout_marginRight="@dimen/register_margerright"
        app:hint_text="新密码"
        app:input_type="password"
        app:text_color="?attr/text_color_model" />

    <com.stuonline.views.CustomerEditText
        android:id="@+id/sms_repwd_repwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/register_margerleft"
        android:layout_marginRight="@dimen/register_margerright"
        app:hint_text="重复密码"
        app:input_type="password"
        app:text_color="?attr/text_color_model" />
</LinearLayout>