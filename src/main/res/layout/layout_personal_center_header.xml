<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_center_person_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/left_menu_bg" />

    <com.stuonline.views.CircleImage
        android:id="@+id/personal_center_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/aa" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personal_center_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称：Alice"
            android:textColor="@android:color/white"
            android:textSize="?attr/text_size_16" />

        <TextView
            android:id="@+id/personal_center_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号：queen"
            android:textColor="@android:color/white"
            android:textSize="?attr/text_size_16" />

        <TextView
            android:id="@+id/personal_center_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校：北京理工大学"
            android:textColor="@android:color/white"
            android:textSize="?attr/text_size_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/is_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/gou"
        android:drawablePadding="5dp"
        android:text="已认证"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="?attr/text_size_16" />

</RelativeLayout>