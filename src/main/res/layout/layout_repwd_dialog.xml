<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/select_dialog_helper_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码的邮件发送,有效\n期3天"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:textSize="?attr/text_size_16" />

    <Button
        android:id="@+id/select_dialog_helper_bt"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_code_bg"
        android:text="确定"
        android:layout_marginBottom="10dp"
        android:textSize="?attr/text_size_18"
        android:textColor="@color/selector_bg_text_color" />

</LinearLayout>