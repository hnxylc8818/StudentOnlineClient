<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 孙继爽：自定义EditText的属性（开始）-->
    <declare-styleable name="CustomerEditText">
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="hint_text" format="string" />
        <attr name="input_type" format="enum">
            <enum name="password" value="1" />
            <enum name="normal" value="2" />
            <enum name="number" value="3" />
        </attr>
        <attr name="button_src" format="reference|color" />
        <attr name="button_visibility" format="enum">
            <enum name="visible" value="1" />
            <enum name="gone" value="0" />
        </attr>
        <attr name="maxlenght" format="integer" />
    </declare-styleable>
    <!-- 孙继爽：自定义EditText的属性（结束）-->
</resources>