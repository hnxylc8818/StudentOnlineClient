<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--孙卫星：自定义TitleView的属性（开始）-->
    <declare-styleable name="TitleView">
        <attr name="left_src" format="reference|color" />
        <attr name="centent_text_Size" format="dimension" />
        <attr name="centent_text_Color" format="color" />
        <attr name="centent_text" format="string" />

        <attr name="right_text_Size" format="dimension" />
        <attr name="right_text_Color" format="color" />
        <attr name="right_text" format="string" />
        <attr name="right_src" format="reference|color" />
        <attr name="right_visibility" format="enum">
            <enum name="visible" value="1" />
            <enum name="gone" value="0" />
        </attr>
        <attr name="right_text_visibility" format="enum">
            <enum name="visible" value="1" />
            <enum name="gone" value="0" />
        </attr>

        <attr name="left_visibility" format="enum">
            <enum name="visible" value="1" />
            <enum name="gone" value="0" />
        </attr>
    </declare-styleable>
    <!--孙卫星：自定义TitleView的属性（结束）-->
    <!-- 孙继爽：自定义EditText的属性（开始）-->
    <declare-styleable name="CustomerEditText">
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="hint_text" format="string" />
        <attr name="input_type" format="enum">
            <enum name="password" value="1" />
            <enum name="normal" value="2" />
            <enum name="number" value="3" />
        </attr>
        <attr name="button_src" format="reference|color" />
        <attr name="button_visibility" format="enum">
            <enum name="visible" value="1" />
            <enum name="gone" value="0" />
        </attr>
        <attr name="maxlenght" format="integer" />
    </declare-styleable>
    <!-- 孙继爽：自定义EditText的属性（结束）-->


    <!-- 徐宾：换肤属性 -->
    <attr name="bg" format="reference|color" />
    <attr name="text_color_model" format="color"/>
    <attr name="text_size_22" format="dimension|integer"/>
    <attr name="text_size_20" format="dimension|integer"/>
    <attr name="text_size_18" format="dimension|integer"/>
    <attr name="text_size_16" format="dimension|integer"/>
</resources>